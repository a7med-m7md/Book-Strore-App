<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/store_img"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:src="@drawable/bookstore"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/txt_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/store_img"
        android:text="Book Store"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/num_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_store"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_smartphone_black_24dp" />

    <TextView
        android:id="@+id/txt_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_store"
        android:layout_below="@+id/txt_store"
        android:text="+201024251210"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/num_icon"
        android:layout_below="@+id/num_icon"
        android:paddingTop="10dp"
        android:src="@drawable/ic_location_on_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_num"
        android:paddingTop="15dp"
        android:layout_below="@+id/txt_num"
        android:textStyle="bold"
        android:text="Faqous - El-sharqia"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/descrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/location_icon"
        android:layout_below="@+id/location_icon"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:text="@string/dis"
        />

</RelativeLayout>